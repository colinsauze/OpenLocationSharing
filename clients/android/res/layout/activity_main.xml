<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top" >

    <requestFocus />

    <requestFocus />

    <TextView
        android:id="@+id/Lati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="24dp"
        android:text="Latitude" />

    <TextView
        android:id="@+id/longi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Lati"
        android:layout_alignBottom="@+id/Lati"
        android:layout_alignLeft="@+id/lon"
        android:text="Longitude" />

    <EditText
        android:id="@+id/lon"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/longi"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:inputType="none|numberDecimal" />

    <EditText
        android:id="@+id/lat"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lon"
        android:layout_alignBottom="@+id/lon"
        android:layout_alignParentLeft="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:inputType="none|numberDecimal" />

    <EditText
        android:id="@+id/Bearing"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lat"
        android:layout_marginTop="31dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:inputType="number" />

    <EditText
        android:id="@+id/Acc"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Bearing"
        android:layout_alignBottom="@+id/Bearing"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Acc"
        android:layout_alignLeft="@+id/Acc"
        android:layout_alignRight="@+id/longi"
        android:text="Accuracy" />

    <TextView
        android:id="@+id/Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:text="Heading" />

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <ToggleButton
        android:id="@+id/Start_Stop"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/Bearing"
        android:layout_below="@+id/Bearing"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/camera_preview"
        android:longClickable="false"
        android:text="Stop" />

    <Button
        android:id="@+id/options"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Start_Stop"
        android:layout_alignLeft="@+id/Acc"
        android:layout_alignParentRight="true"
        android:longClickable="false"
        android:text="Options" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Start_Stop"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Start_Stop"
        android:clickable="false"
        android:cursorVisible="false"
        android:longClickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</RelativeLayout>